#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    chosen {
        zmk,physical-layout = &foostan_corne_5col_layout;
    };

    behaviors {
        hml: home_row_mod_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <5 6 7 8 9 15 16 17 18 19 25 26 27 28 29 33 34 35>; // List of keys on the right side of the keyboard
            hold-trigger-on-release;
        };
        hmr: home_row_mod_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <0 1 2 3 4 10 11 12 13 14 20 21 22 23 24 30 31 32>; // List of keys on the left side of the keyboard
            hold-trigger-on-release;
        };
    };
        keymap {
                compatible = "zmk,keymap";
                base_layer { //layer 0
                        display-name = "Base";
                        bindings = <
                        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                        //│  Q       │  W       │  E       │  R       │  T       │   │  Y       │  U       │  I       │  O       │  P       │
                            &kp Q     &kp W       &kp E      &kp R      &kp T          &kp Y      &kp U       &kp I     &kp O     &kp P
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│  A       │  S       │  D       │  F       │  G       │   │  H       │  J       │  K       │  L       │ ' "      │
                            &hml LSHFT A &hml LALT S &hml LCTL D &hml RSHFT F &kp G    &kp H &hmr RSHFT J &hmr RCTL K &hmr RALT L &hmr RGUI APOS
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│  Z       │  X       │  C       │  V       │  B       │   │  N       │  M       │  , <     │ . >      │ / ?      │
                            &kp Z      &kp X      &kp C      &kp V      &kp B          &kp N      &kp M      &kp COMMA  &kp DOT   &kp FSLH
                        //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                        //                      │ L1 & ESC │ L2 & SPC │ L3 & TAB │   │ L4 & ENT │ L5 & BSPC│ L6 & DEL │                                          
                                                 &lt 1 ESC  &lt 2 SPC  &lt 3 TAB      &lt 4 ENT  &lt 5 BSPC  &lt 6 DEL 
                        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                    >;    
                };

                media_layer { //layer 1
                        display-name = "Media";
                        bindings = <
                        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                        //│          │          │          │          │          │   │          │          │          │          │          │
                            &none      &none      &none      &none      &none          &none      &none       &none     &none     &none
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│  L. GUI  │ L. ALT   │ L. CTL   │ L. SHIFT │          │   │          │  PREVIOUS│  VOL +   │  VOL -   │ NEXT     │
                            &kp LGUI   &kp LALT   &kp LCTL   &kp LSHFT   &none         &none     &kp K_PREV  &kp K_VOL_UP &kp K_VOL_DN &kp K_NEXT
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│          │          │          │          │          │   │  BT CLR  │  BT 0    │  BT 1    │  BT 2    │ BT 3     │
                            &none      &none      &none      &none      &none        &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3
                        //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                        //                      │          │          │          │   │ STOP     │PLAY PAUSE│ MUTE     │   
                                                  &none        &none      &none      &kp K_STOP  &kp K_MUTE &kp K_PP
                        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                nav_layer { //layer 2
                        display-name = "Nav";
                        bindings = <
                        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                        //│          │          │          │          │          │   │  REDO    │ PASTE    | COPY     │ CUT      │ UNDO     │
                            &none      &none      &none      &none      &none         &kp K_REDO &kp K_PASTE &kp K_COPY &kp K_CUT &kp K_UNDO
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│  L. GUI  │ L. ALT   │ L. CTL   │ L. SHIFT │          │   │ CAPS     │ LEFT     │ DOWN     │ UP       │ RIGHT    │
                            &kp LGUI   &kp LALT   &kp LCTL   &kp LSHFT   &none         &kp CAPS   &mmv MOVE_LEFT &mmv MOVE_DOWN &mmv MOVE_UP &mmv MOVE_RIGHT
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│          │          │          │          │          │   │ INSERT   │ HOME     │ PAGE DOWN│ PAGE UP  │ END      │
                            &none      &none      &none      &none      &none          &kp INS    &kp HOME   &kp PG_DN  &kp PG_UP  &kp END
                        //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                        //                      │          │          │          │   │ ENTER    │ BACKSPACE│ DELETE   │   
                                                  &none        &none      &none       &kp ENT     &kp BSPC   &kp DEL
                        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };
                mouse_layer { //layer 3
                        display-name = "Mouse";
                        bindings = <
                        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                        //│          │          │          │          │          │   │  REDO    │ PASTE    | COPY     │ CUT      │ UNDO     │
                            &none      &none      &none      &none      &none         &kp K_REDO &kp K_PASTE &kp K_COPY &kp K_CUT &kp K_UNDO
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│  L. GUI  │ L. ALT   │ L. CTL   │ L. SHIFT │          │   │          │  LEFT    │ DOWN     │ UP       │ RIGHT    │
                            &kp LGUI   &kp LALT   &kp LCTL   &kp LSHFT   &none         &none     &mmv MOVE_LEFT &mmv MOVE_DOWN &mmv MOVE_UP &mmv MOVE_RIGHT
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│          │          │          │          │          │   │          │SCRL LEFT │SCRL DOWN │SCRL UP   │SCRL RIGHT│
                            &none      &none      &none      &none      &none          &none     &msc SCRL_LEFT &msc SCRL_DOWN &msc SCRL_UP &msc SCRL_RIGHT
                        //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                        //                      │          │          │          │   │ R. CLICK │ L. CLICK │ MID CLICK│   
                                                  &none        &none      &none       &mkp RCLK  &mkp LCLK &mkp MCLK
                        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };
                macro_layer { //layer 4
                        display-name = "Macro";
                        bindings = <
                        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                        //│          │          │          │          │          │   │          │          │          │          │          │
                            &none      &none      &none      &none      &none          &none      &none      &none      &none      &none
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│          │          │          │          │          │   │          │          │          │          │          │
                            &none      &none      &none      &none      &none          &none      &none      &none      &none      &none
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│          │          │          │          │          │   │          │          │          │          │          │
                            &none      &none      &none      &none      &none          &none      &none      &none      &none      &none
                        //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                        //                      │          │          │          │   │          │          │          │   
                                                 &none      &none      &none           &none      &none      &none
                        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                number_layer { //layer 5
                        display-name = "Num";
                        bindings = <
                        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                        //│ [       │ 7 &      │ 8 *      │ 9 (      │ ]       │   │          │          │          │          │          │
                            &kp LBKT   &kp N7      &kp N8     &kp N9    &kp RBKT       &none      &none      &none      &none      &none     
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│ ; :      │ 4 $      │ 5 %      │ 6 ^      │ = +      │   │          │ R. SHIFT │  R. CTL  │ R. ALT   │ R. GUI   │
                            &kp SEMI   &kp N4      &kp N5     &kp N6   &kp EQUAL       &none      &kp RSHFT &kp RCTL   &kp RALT   &kp RGUI
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│ ` ~      │ 1 !      │ 2 @      │ 3 #      │ \ |      │   │          │          │          │          │          │
                            &kp GRAVE  &kp N1     &kp N2     &kp N3     &kp BKSH       &none      &none      &none      &none      &none    
                        //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                        //                      │ . >      │ 0 )      │ - _      │   │          │          │          │   
                                                  &kp DOT    &kp N0     &kp MINUS      &none      &none      &none
                        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                function_layer { //layer 6
                        display-name = "FNC";
                        bindings = <
                        //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
                        //│ F12      │ F7       │ F8       │ F9       │ PrintSC  │   │          │          │          │          │          │
                            &kp F12    &kp F7     &kp F8     &kp F9     &kp PSCRN      &none      &none      &none      &none      &none      
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│ F11      │ F4       │ F5       │ F6       │ SCRL LCK │   │          │ R. SHIFT │ R. CTL   │ R. ALT   │ R. GUI   │
                            &kp F11    &kp F4     &kp F5     &kp F6     &kp LSLCK      &none      &kp RSHFT  &kp RCTL   &kp RALT   &kp RGUI
                        //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────
                        //│ F10      │ F1       │ F2       │ F3       │ PAUSE BRK│   │          │          │          │          │          │
                            &kp F10    &kp F1     &kp F2     &kp F3     &kp PAUSE_BREAK &none     &none      &none      &none      &none
                        //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
                        //                      │ ESC      │ SPC      │ TAB      │   │          │          │          │   
                                                 &kp ESC     &kp SPC    &kp TAB        &none      &none      &none
                        //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };
        };
};
